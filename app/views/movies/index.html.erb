<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th> Name </th>
      <th> Description </th>
      <th> Year </th>
      <th> Average Rating </th>
      <th> Actors </th>
      <th> Directors </th>
      <th> Film Locations </th>
    </tr>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.description %></td>
        <td><%= movie.year %></td>
        <td><%= @average_ratings[movie.id] %></td>
        <td><%= movie.crew_members.actors.pluck(:name) %></td>
        <td><%= movie.crew_members.directors.pluck(:name) %></td>
        <td><%= movie.film_locations.pluck(:location_name, :country) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

