<p id="notice"><%= notice %></p>

<h1>Actors</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th> Name </th>
      <th> Movies <th>
    </tr>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.name %></td>
        <td><%= actor.movies.pluck(:name) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

